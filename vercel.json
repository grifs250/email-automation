{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/app.js" }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "regions": ["arn1"],
  "crons": [
    {
      "path": "/api/worker",
      "schedule": "*/5 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Connection",
          "value": "keep-alive"
        },
        {
          "key": "X-Real-IP",
          "value": "${http:x-real-ip}"
        }
      ]
    }
  ]
} 